# Backend runtime
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://opcua-frontend-b7akcgryl-tutuchs-projects.vercel.app/
JWT_SECRET=REPLACE_WITH_STRONG_SECRET
ENABLE_MOCK_DATA=false

# Postgres (internal service)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=opcua_dashboard

# Redis (internal service)
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=  # set if you add requirepass to redis service

# InfluxDB (internal service)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=opcua-org
INFLUXDB_BUCKET=machine-data
# InfluxDB bootstrap (used by influxdb container and backend token)
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=admin_password_change_me
INFLUXDB_TOKEN=dev-token-super-secret-admin-token

# MQTT broker (internal service)
MQTT_BROKER_URL=mqtt://mosquitto:1883
# MQTT_USERNAME=
# MQTT_PASSWORD=


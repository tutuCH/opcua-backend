# Environment Template for Docker Compose Deployment
# This file is used by scripts/deploy-demo.sh to generate .env.compose
# Values marked with {{AUTO_GENERATED_*}} will be replaced with secure random strings

# Backend runtime
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3030
JWT_SECRET={{AUTO_GENERATED_JWT_SECRET}}  # Will be 64-char random string
ENABLE_MOCK_DATA=false  # Disabled - using real production injection machines

# Postgres (internal Docker service)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD={{AUTO_GENERATED_POSTGRES_PASSWORD}}  # Will be 32-char random string
POSTGRES_DB=opcua_dashboard

# Redis (internal Docker service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD={{AUTO_GENERATED_REDIS_PASSWORD}}  # Will be 32-char random string

# InfluxDB (internal Docker service)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=opcua-org
INFLUXDB_BUCKET=machine-data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD={{AUTO_GENERATED_INFLUXDB_PASSWORD}}  # Will be 32-char random string
INFLUXDB_TOKEN={{AUTO_GENERATED_INFLUXDB_TOKEN}}  # Will be 64-char random string

# MQTT broker (internal Docker service)
MQTT_BROKER_URL=mqtt://mosquitto:1883
# MQTT is configured for anonymous access in demo mode
# MQTT_USERNAME=
# MQTT_PASSWORD=

# AWS Integration (Optional - not used in demo mode)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# COGNITO_USER_POOL_ID=
# COGNITO_CLIENT_ID=
# TIMESTREAM_DATABASE=
# TIMESTREAM_TABLE=

# Stripe (Optional - not used in demo mode)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Email (Optional - not used in demo mode)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=

  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "demo:setup": "cd demoMqttServer && cp .env ../.env && echo 'Demo environment configured'",
    "demo:start": "cd demoMqttServer && docker compose up -d",
    "demo:stop": "cd demoMqttServer && docker compose down",
    "demo:restart": "npm run demo:stop && npm run demo:start",
    "demo:logs": "cd demoMqttServer && docker compose logs -f",
    "demo:health": "cd demoMqttServer && docker compose ps",
    "demo:clean": "cd demoMqttServer && docker compose down -v --rmi all",
    "demo:dev": "npm run demo:setup && npm run demo:start && npm run start:dev"
  },
